{
  "name": "folks-finance-js-sdk",
  "version": "0.12.1",
  "description": "The official JavaScript SDK for the Folks Finance Protocol",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**/*",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Folks-Finance/folks-finance-js-sdk.git"
  },
  "keywords": [
    "Folks Finance",
    "Algorand"
  ],
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "prepack": "npm run build",
    "docs": "typedoc src/index.ts --options typedoc.config.json --tsconfig tsconfig.json",
    "format": "prettier --write 'src/**/*'",
    "example": "ts-node --project tsconfig.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "algosdk": "^2.4.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^9.2.1",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.3"
  },
  "author": "Folks Finance",
  "license": "MIT",
  "lint-staged": {
    "*.src/**/*": "prettier --write"
  }
}
